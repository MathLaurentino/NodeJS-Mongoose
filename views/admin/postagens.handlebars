{{#each erro}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{/each}}

<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/add"> <button class="btn btn-success">Nova Postagem</button> </a> 


{{#each postagens}}

    <div class="card  m-2">
        <div class="card-body m-2">
            <h4> {{titulo}} </h4>
            <p> Descrição: {{descricao}} </p>
            <p> Categoria: {{categoria.nome}} </p>
            <small> Data:  {{data}} </small> <br>
            <a href="/admin/postagem/edit/{{_id}}"> <button class="btn btn-success mt-4"> Editar </button> </a> 
            <a href="/admin/postagem/deletar/{{_id}}"> <button class="btn btn-danger mt-4"> Deletar </button> </a> 
        </div>
    </div>
    

{{else}}

{{/each}}