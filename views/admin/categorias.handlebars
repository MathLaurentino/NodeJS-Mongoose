<h2>Lista de Categorias: </h2>
<hr>
<a href="categorias/add"> <button class="btn btn-success">Nova Categoria</button> </a> 

{{!-- {{categorias}} --}}

{{#each categorias}}

    <div class="card mt-4">
        <div class="card-body">

            <h4> {{nome}} </h4>
            <small> {{slug}} </small> <br>

            <a href="/admin/categorias/adit/{{_id}}"> <button class="btn btn-success mt-4"> Editar</button> </a>

            <a href="/admin/categorias/deletar/{{_id}}"> <button  class="btn btn-danger mt-4">Deletar</button> </a>

        </div>
    </div>

    {{else}}
    erro
    
{{/each}}

